<div class="container">
  <h1>Deaf Grandma</h1>
  <% if @grandma %>
    <p id="grandma_says">Grandma says: "<span id="grandma_says"><%= @grandma %></span>"</p>
  <% end %>
  <div id="grandmasays"></div>
  <form id="submit_button" action="/grandma" method="post">
    Say something to Grandma:
    <br>
    <input type="text" name="user_input">
    <input type="submit" value="Say it!">
  </form>
</div>
