<div class="container">
  <h1>Deaf Grandma</h1>
  <% if @grandma %>
    <p>Grandma says: "<span id="grandma_says"><%= @grandma %></span>"</p>
  <% end %>

  <form action="/grandma" method="post" id="granny_talk">
    Say something to Grandma:
    <br>
    <input id="user_input" type="text" name="user_input">
    <input id="submit_button" type="submit" value="Say it!">
  </form>

  <p id="granny_response"></p>
</div>
